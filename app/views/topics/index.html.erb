 <h1>Topics</h1>

<div class="row">
  <div class="col-md-8">
    <!-- loops over each topic in @topics -->
    <%@topics.each do |topic| %>
      <%= render partial: 'topic', locals: {topic: topic} %>
    <% end %>
  </div>
  <% if user_is_authorized_for_topics? %>
    <div class="col-md-4">
      <!-- creates a link the create a new topic -->
      <% unless current_user.moderator? %>
        <%= link_to "New Topic", new_topic_path, class: 'btn btn-success' %>
      <% end %>
    </div>
  <% end %>
</div>
