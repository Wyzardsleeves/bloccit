<h1>Topics</h1>

<div class="row">
  <div class="col-md-8">
    <!-- loops over each topic in @topics -->
    <%@topics.each do |topic| %>
    <div class="media">
      <div class="media-body">
        <h4 class="media-healing">
          <!-- creates a link to show view for the topic-->
          <%= link_to topic.name, topic %>
        </h4>
        <small>
          <%= topic.description %>
        </small>
      </div>
    </div>
    <% end %>
  </div>
  <div class="col-md-4">
    <!-- creates a link the create a new topic -->
    <%= link_to "New Topic", new_topic_path, class: 'btn btn-success' %>
  </div>
</div>
